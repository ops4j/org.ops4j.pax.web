			<artifactId>org.apache.felix.metatype</artifactId>
			<!-- this has to be test scope, because it's related to how pax-exam analyzes the test classes -->
			<scope>test</scope>
		</dependency>

		<!-- JavaEE -->

		<dependency>
			<groupId>jakarta.annotation</groupId>
