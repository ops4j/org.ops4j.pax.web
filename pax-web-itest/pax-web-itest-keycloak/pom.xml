		<!-- OPS4J dependencies -->

		<dependency>
			<!-- required by pax-exam -->
			<groupId>org.ops4j.base</groupId>
			<artifactId>ops4j-base-lang</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<!-- required by pax-exam -->
