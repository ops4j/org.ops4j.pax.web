<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <parent>
    <groupId>org.ops4j.pax.web.build</groupId>
    <artifactId>bundles</artifactId>
    <version>0.3.0-SNAPSHOT</version>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <artifactId>wrap-jar-as-bundle</artifactId>

  <name>Configure OSGi wrappers for third-party jar(s)</name>

  <organization />
  <description>
    Simple OSGi wrapper around third-party jar(s)
  </description>
  <licenses>
    <license />
  </licenses>

  <packaging>pom</packaging>

  <properties>
    <bundle.location>${project.build.directory}/${project.build.finalName}.jar</bundle.location>
  </properties>

  <build>
    <!--
      wrapper specific plugin configuration
    -->
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-dependency-plugin</artifactId>
          <configuration>
            <!--
              default is one jar per bundle, but this can be overriden in sub-projects
            -->
            <artifactItems>
              <artifactItem>
                <groupId>${jar.groupId}</groupId>
                <artifactId>${jar.artifactId}</artifactId>
                <version>${jar.version}</version>
              </artifactItem>
            </artifactItems>
          </configuration>
          <executions>
            <execution>
              <id>unpack-jar</id>
              <phase>generate-resources</phase>
              <goals>
                <goal>unpack</goal>
              </goals>
              <configuration>
                <outputDirectory>${project.build.outputDirectory}</outputDirectory>
                <excludeTransitive>true</excludeTransitive>
              </configuration>
            </execution>
          </executions>
        </plugin>
        <plugin>
          <groupId>org.ops4j.pax.maven</groupId>
          <artifactId>maven-bundle-plugin</artifactId>
          <extensions>true</extensions>
          <configuration>
            <instructions>
              <Bundle-Version>${project.version}</Bundle-Version>
              <Bundle-SymbolicName>$(replace;${project.artifactId};-;_)</Bundle-SymbolicName>
              <!--
                by default import + export all packages from the wrapped jarfile
                except the root package "." - this cannot be shared, as it could
                potentially lead to a split-package situation
              -->
              <_classpath>target/classes</_classpath>
              <Export-Package>*;version="${jar.version}"</Export-Package>
              <Import-Package>!.,*</Import-Package>
              <!--
                load project specific settings
              -->
              <_include>-target/classes/META-INF/details.bnd</_include>
            </instructions>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

</project>
