  <name>Simple OSGi project</name>

  <description>
    Build layout for a simple OSGi application
  </description>

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.ops4j.pax.web</groupId>
  <artifactId>web</artifactId>
  <version>0.2.0-SNAPSHOT</version>

  <properties>
    <org.osgi.service.http.port>8080</org.osgi.service.http.port>
    <org.osgi.service.http.port.secure>8443</org.osgi.service.http.port.secure>
  </properties>

  <packaging>pom</packaging>

  <modules>
    <module>poms</module>
    <module>org.mortbay.jetty.jetty</module>
    <module>org.mortbay.jetty.jetty-util</module>
    <module>service</module>
    <module>demo</module>
    <module>demo.minimal</module>
    <module>org.mortbay.jetty.servlet-api</module>
    <module>configurer.simple</module>
  </modules>

  <build>
    <plugins>
      <plugin>
        <!-- help find the right 'pax' plugin -->
        <groupId>org.ops4j.pax.construct</groupId>
        <artifactId>maven-pax-plugin</artifactId>
        <inherited>false</inherited>
      </plugin>
    </plugins>
  </build>

  <repositories>
    <repository>
      <id>ops4j-repository</id>
      <url>http://repository.ops4j.org/maven2</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <id>ops4j-repository</id>
      <url>http://repository.ops4j.org/maven2</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </pluginRepository>
  </pluginRepositories>

</project>
